<%= form_for(@note, :html => {:multipart => true}) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id='priority'>
    <%= f.label :priority %>
    <%= f.select :priority, options_for_select([["Urgent", "a"], ["Quite urgent", "b"],["Not urgent", "c"]]) %>
  </div>
  <div class="field" id='title'>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field" id='description'>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field" id='photo'>
    <%= f.label :photo %><br>
    <%= f.file_field :photo %><br>
	
	<%= f.label :remote_photo_url, "or Photo URL" %><br>
    <%= f.text_field :remote_photo_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
